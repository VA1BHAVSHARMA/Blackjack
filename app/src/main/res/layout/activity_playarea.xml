<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playarea">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="317dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Computer Cards:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="21dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="User Cards:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_cards"
        app:layout_constraintStart_toStartOf="@+id/ycard"
        app:layout_constraintTop_toBottomOf="@+id/ycard" />

    <TextView
        android:id="@+id/computer_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="29dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="C"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/computer_score"
        app:layout_constraintStart_toStartOf="@+id/computer_score"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/user_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="29dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="C"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_score"
        app:layout_constraintStart_toStartOf="@+id/user_score"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/user_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Score:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_cards" />

    <TextView
        android:id="@+id/computer_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Score:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computer_cards" />

    <TextView
        android:id="@+id/dou"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="22dp"
        android:clickable="false"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Do you want to draw a card ?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ycard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computer_score" />

    <Button
        android:id="@+id/ycard"
        android:layout_width="108dp"
        android:layout_height="53dp"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="YES"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/ncard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dou" />

    <Button
        android:id="@+id/ncard"
        android:layout_width="108dp"
        android:layout_height="53dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="202dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="NO"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/user_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ycard"
        app:layout_constraintTop_toTopOf="@+id/computer_score"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/again"
        android:layout_width="133dp"
        android:layout_height="62dp"
        android:layout_marginBottom="281dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="-->"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>